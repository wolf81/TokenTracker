<?xml version="1.0" encoding="UTF-8"?>
<base:ContentPageBase
    xmlns:base="clr-namespace:TokenTracker.Views.Base"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="TokenTracker.Views.TokenWalletView"
    xmlns:viewModelBase="clr-namespace:TokenTracker.ViewModels.Base"
    viewModelBase:ViewModelLocator.AutoWireViewModel="true"
    xmlns:local="clr-namespace:TokenTracker;assembly=TokenTracker"
    xmlns:controls="clr-namespace:TokenTracker.Controls"
    IconImageSource="{local:ImageResource TokenTracker.Resources.ic_wallet_b.png}"
    Title="{Binding Title}">
    <base:ContentPageBase.ToolbarItems>
        <ToolbarItem
            IconImageSource="{local:ImageResource TokenTracker.Resources.ic_add_w.png}" />
    </base:ContentPageBase.ToolbarItems>
    <ContentPage.Content>
        <ListView
            RowHeight="50"
            ItemsSource="{Binding Items}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <controls:WalletViewCell />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</base:ContentPageBase>
