<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="TokenTracker.Views.TokenSearchView"
    xmlns:viewModelBase="clr-namespace:TokenTracker.ViewModels.Base;assembly=TokenTracker"
    xmlns:viewModels="clr-namespace:TokenTracker.ViewModels"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    xmlns:controls="clr-namespace:TokenTracker.Controls"
    ios:Page.UseSafeArea="True"
    BackgroundColor="#e7e7e7"
    viewModelBase:ViewModelLocator.AutoWireViewModel="true"
    Title="{Binding Title}">
    <ContentPage.Content>
        <StackLayout>
            <SearchBar
                x:Name="searchBar"
                Placeholder="Enter name or symbol"
                IsSpellCheckEnabled="False"                
                SearchCommand="{Binding SearchTokenCommand}"
                SearchCommandParameter="{Binding Text, Source={x:Reference searchBar}}" />
            <ListView
                BackgroundColor="Transparent"
                SelectionMode="None"
                ItemsSource="{Binding Tokens}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <controls:TokenViewCell Token="{Binding .}" Command="{Binding AddTokenCommand, Source={RelativeSource AncestorType={x:Type viewModels:TokenSearchViewModel}}}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.Footer>
                    <ContentView />
                </ListView.Footer>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
